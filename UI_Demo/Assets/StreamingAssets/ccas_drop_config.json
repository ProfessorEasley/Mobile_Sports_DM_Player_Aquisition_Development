  "emotional_acquisition_loop": {
    "phases": {
      "entry_hook": {
        "emotional_goal": "Spark curiosity",
        "system_feedback": "Shows 'Rare in X Packs'",
        "target_emotions": {
          "curiosity": 4.0,
          "hope": 3.0
        },
        "emotional_curve": "moderate_rise",
        "duration_target_seconds": 15
      },
      "early_pulls": {
        "emotional_goal": "Build tension",
        "system_feedback": "No spike, streak builds",
        "target_emotions": {
          "frustration": 3.0,
          "hope": 2.0
        },
        "emotional_curve": "tension_build",
        "duration_target_seconds": 45
      },
      "hope_ramp": {
        "emotional_goal": "Sustain engagement",
        "system_feedback": "Uncommon/Rare appears",
        "target_emotions": {
          "hope": 6.0,
          "social_envy": 2.0
        },
        "emotional_curve": "hope_climb",
        "duration_target_seconds": 30
      },
      "reward_spike": {
        "emotional_goal": "Deliver emotional peak",
        "system_feedback": "Animations, haptics, social prompt",
        "target_emotions": {
          "satisfaction": 7.0,
          "excitement": 8.0,
          "social_validation": 1.5
        },
        "emotional_curve": "sharp_peak",
        "duration_target_seconds": 12
      },
      "re_evaluation": {
        "emotional_goal": "Reassess value",
        "system_feedback": "Shows drop chart, team XP impact",
        "target_emotions": {
          "satisfaction": 6.0,
          "curiosity": 5.0
        },
        "emotional_curve": "stabilize_reflect",
        "duration_target_seconds": 120
      },
      "exit_or_loop": {
        "emotional_goal": "Retain/return player",
        "system_feedback": "Sends '1 away' reminder, bonus offer",
        "target_emotions": {
          "motivation": 4.0,
          "regret": 4.0
        },
        "emotional_curve": "decision_point",
        "duration_target_seconds": 60
      }
    },
    "emotional_pacing_goals": {
      "target_positive_ratio": 0.6,
      "target_negative_ratio": 0.4,
      "time_between_peaks_minutes": 4,
      "pity_trigger_negative_phases": 2
    }
  },
  "emotional_trigger_mapping": {
    "common_streak_3": {
      "detection_condition": "pull_streak >= 3 AND rarity == common",
      "emotions_affected": {
        "regret": 1.5,
        "fatigue": 0.5
      },
      "system_response": "boost_odds_silently",
      "response_parameters": {
        "odds_multiplier": 1.3,
        "flag_pack_hot": true
      }
    },
    "epic_legendary_pull": {
      "detection_condition": "rarity IN [epic, legendary]",
      "emotions_affected": {
        "satisfaction": 2.0,
        "excitement": 1.5
      },
      "system_response": "trigger_celebration_sequence",
      "response_parameters": {
        "animation_duration": 3,
        "haptic_intensity": "strong",
        "social_share_prompt": true
      }
    },
    "dupe_upgrade_activation": {
      "detection_condition": "dupe_xp_triggers_upgrade == true",
      "emotions_affected": {
        "satisfaction": 1.5,
        "curiosity": 1.0
      },
      "system_response": "show_upgrade_summary",
      "response_parameters": {
        "highlight_progress": true
      }
    },
    "session_fatigue": {
      "detection_condition": "session_duration > 10 AND interaction_idle_time > 30",
      "emotions_affected": {
        "fatigue": 1.0
      },
      "system_response": "suggest_break_or_bonus",
      "response_parameters": {
        "break_message": "Take a breather! Your next pack will have better odds.",
        "return_bonus_multiplier": 1.2
      }
    },
    "social_exposure": {
      "detection_condition": "viewed_leaderboard OR viewed_shared_result",
      "emotions_affected": {
        "social_envy": 1.5
      },
      "system_response": "recommend_event_booster",
      "response_parameters": {
        "better_odds_multiplier": 1.4,
        "time_limited_minutes": 30
      }
    },
    "missed_limited_offer": {
      "detection_condition": "pack_expired WITHOUT purchase",
      "emotions_affected": {
        "regret": 2.0,
        "fomo_anxiety": 2.0
      },
      "system_response": "show_redemption_bonus",
      "response_parameters": {
        "revival_token_cost": 50,
        "extended_time_minutes": 15
      }
    },
    "repeated_dupe_pulls": {
      "detection_condition": "session_dupes >= 2",
      "emotions_affected": {
        "regret": 2.0,
        "frustration": 2.0
      },
      "system_response": "offer_dupe_conversion_bonus",
      "response_parameters": {
        "xp_multiplier": 1.5,
        "dust_bonus": true
      }
    },
    "player_shares_pull": {
      "detection_condition": "share_button_used == true",
      "emotions_affected": {
        "satisfaction": 1.0,
        "social_validation": 0.5
      },
      "system_response": "display_social_streak_badge"
    },
    "session_without_rare": {
      "detection_condition": "pulls >= 10 AND no_rare_plus",
      "emotions_affected": {
        "disappointment": 2.5,
        "fatigue": 1.0
      },
      "system_response": "trigger_pity_or_due_prompt",
      "response_parameters": {
        "show_pity_bar": true,
        "you_are_due_message": true
      }
    },
    "high_ces_burnout": {
      "detection_condition": "cumulative_emotion_score < -6",
      "emotions_affected": {
        "all_negative": "maintain"
      },
      "system_response": "trigger_cooldown_suggestion",
      "response_parameters": {
        "upcoming_bonus_reminder": true
      }
    }
  },
  "emotional_state_tracker": {
    "tracked_emotions": {
      "regret": {
        "range": [0.0, 10.0],
        "decay_condition": "rare_plus_pull OR share_dupe_upgrade",
        "decay_rate": -2.0
      },
      "satisfaction": {
        "range": [0.0, 10.0],
        "decay_condition": "no_reward_or_share_2_sessions",
        "decay_rate": -2.0
      },
      "frustration": {
        "range": [0.0, 10.0],
        "decay_condition": "xp_multiplier OR dupe_bonus_received",
        "decay_rate": -1.5
      },
      "fatigue": {
        "range": [0.0, 10.0],
        "decay_condition": "24h_logout OR session_pause",
        "decay_rate": -1.5
      },
      "social_envy": {
        "range": [0.0, 10.0],
        "decay_condition": "2_sessions_no_leaderboard_exposure",
        "decay_rate": -1.0
      },
      "curiosity": {
        "range": [0.0, 10.0],
        "decay_condition": "natural_time_decay",
        "decay_rate": -0.5
      },
      "hope": {
        "range": [0.0, 10.0],
        "decay_condition": "pity_pull OR animation_hint",
        "decay_rate": -1.0
      },
      "disappointment": {
        "range": [0.0, 10.0],
        "decay_condition": "next_rare_plus_pull",
        "decay_rate": -3.0
      },
      "motivation": {
        "range": [0.0, 10.0],
        "decay_condition": "session_end_without_progress",
        "decay_rate": -1.0
      },
      "excitement": {
        "range": [0.0, 10.0],
        "decay_condition": "natural_time_decay_fast",
        "decay_rate": -2.0
      },
      "fomo_anxiety": {
        "range": [0.0, 10.0],
        "decay_condition": "purchase_made OR event_extended",
        "decay_rate": -2.5
      },
      "social_validation": {
        "range": [0.0, 10.0],
        "decay_condition": "natural_time_decay",
        "decay_rate": -1.0
      }
    },
    "ces_calculation": {
      "formula": "(regret + fatigue + frustration + social_envy + disappointment + fomo_anxiety) - (satisfaction + motivation + excitement + social_validation)",
      "intervention_thresholds": {
        "cooldown_suggestion": -6.0,
        "surprise_booster": -4.0,
        "engagement_boost": -2.0
      }
    },
    "crp_integration": {
      "formula": "(0.4 × regret) + (0.3 × fatigue) + (0.2 × social_envy) + (0.1 × disappointment) - (0.3 × social_validation)",
      "intervention_thresholds": {
        "surprise_booster": 0.75,
        "cooldown_suggestion": 0.85,
        "churn_flag": 0.90
      }
    }
  },
